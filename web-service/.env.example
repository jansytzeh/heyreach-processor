# HeyReach Outreach Service - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED - Service won't start without these
# ============================================

# HeyReach API Key (from your config.md)
HEYREACH_API_KEY=MOUg/+IrTkTdT/jnZ4lfDePCCPhefADsWhmNFW1vuT4=

# OpenAI API Key (from platform.openai.com/api-keys)
OPENAI_API_KEY=sk-proj-your-key-here

# OpenAI Vector Store ID (generated by: npm run setup:vector-store)
OPENAI_VECTOR_STORE_ID=vs_xxxxxxxxxxxxxxxx

# Anthropic API Key (OPTIONAL - only for local Claude Code training)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# ============================================
# OPTIONAL - For production deployment
# ============================================

# Dashboard password (optional - if not set, dashboard is open access)
# Set this in production to protect your dashboard
DASHBOARD_PASSWORD=

# Sentry DSN for error tracking (already configured with your project)
# Only override if you want to use a different Sentry project
# SENTRY_DSN=https://4dba44e6852533512af1fbbadf465d3d@o4509690008567808.ingest.us.sentry.io/4510681047302144

# Environment name (development/staging/production)
NODE_ENV=development

# ============================================
# OPTIONAL - Customize processing behavior
# ============================================

# Max conversations to fetch per run (default: 25)
FETCH_LIMIT=25

# Max messages to send per run (default: 30)
MAX_MESSAGES_PER_RUN=30

# Claude model (OPTIONAL - only for local training)
CLAUDE_MODEL=claude-sonnet-4-20250514

# ============================================
# OPENAI MODEL CONFIGURATION
# ============================================

# Primary model for draft generation (faster, cheaper)
OPENAI_PRIMARY_MODEL=gpt-5-mini

# Review model for high-risk items (better quality)
OPENAI_REVIEW_MODEL=gpt-5

# Auto-approve threshold (0.0 to 1.0)
# Drafts with confidence >= this value AND no warnings will be auto-approved
AUTO_APPROVE_CONFIDENCE=0.85

# Kill switch - set to true to enable actual message sending
SEND_ENABLED=false

# Server port (default: 3000)
PORT=3000
